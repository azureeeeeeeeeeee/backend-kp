                    "Gallery"
                ],
                "summary": "Get all gallery activities sorted by activity date (latest first)",
                "operationId": "919d4ef7e5a40cc7ba90818407304d5c",
                "responses": {
                    "200": {
                        "description": "Semua galeri kegiatan berhasil ditemukan"
                    }
                }
            }
        },
